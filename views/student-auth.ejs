<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Student Login - SAMS</title>
  <style>
    body {
      font-family: Arial;
      background: #f3f6fa;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .login-box {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      width: 320px;
      text-align: center;
    }
    h2 { margin-bottom: 20px; color: #333; }
    input, button {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    button {
      background: #4f46e5;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: bold;
    }
    button:hover { background: #3730a3; }
    .link-btn {
      background: none;
      color: #4f46e5;
      border: none;
      cursor: pointer;
      text-decoration: underline;
      font-size: 14px;
      margin-top: 5px;
    }
    #forgotBox { display: none; }
  </style>
</head>
<body>
  <div class="login-box">
    <h2>Student Login</h2>
    <form id="studentLoginForm">
      <input type="text" name="username" placeholder="Username (Roll No)" required />
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>

    <button class="link-btn" onclick="toggleForgot()">Forgot Password?</button>

    <!-- Forgot Password Section -->
    <div id="forgotBox">
      <h3>Forgot Password</h3>
      <input type="email" id="email" placeholder="Enter your registered email" required />
      <button onclick="sendOTP()">Send OTP</button>
      <div id="otpSection" style="display:none;">
        <input type="text" id="otp" placeholder="Enter OTP" />
        <input type="password" id="newPassword" placeholder="New Password" />
        <button onclick="resetPassword()">Reset Password</button>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('studentLoginForm');
    const forgotBox = document.getElementById('forgotBox');
    const otpSection = document.getElementById('otpSection');
    let generatedOTP = null;
    let emailUsed = null;

    // ===============================
    // ðŸ”¹ Normal Login
    // ===============================
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form));
      data.role = 'Student';

      const res = await fetch('/api/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await res.json();
      if (res.ok) {
        localStorage.setItem('token', result.token);
        localStorage.setItem('user', JSON.stringify(result.user));
        alert('Login successful!');
        window.location.href = '/student/portal';
      } else {
        alert(result.error || 'Login failed');
      }
    });

    // ===============================
    // ðŸ”¹ Toggle Forgot Password Box
    // ===============================
    function toggleForgot() {
      forgotBox.style.display = forgotBox.style.display === 'none' ? 'block' : 'none';
    }

    // ===============================
    // ðŸ”¹ Send OTP
    // ===============================
    async function sendOTP() {
      const email = document.getElementById('email').value.trim();
      if (!email) return alert('Please enter your email');

      const res = await fetch('/api/forgot-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, role: 'Student' })
      });

      const data = await res.json();
      if (res.ok) {
        alert('OTP sent successfully! Check your email.');
        otpSection.style.display = 'block';
        emailUsed = email;
      } else {
        alert(data.error || 'Failed to send OTP');
      }
    }

    // ===============================
    // ðŸ”¹ Reset Password with OTP
    // ===============================
    async function resetPassword() {
      const otp = document.getElementById('otp').value.trim();
      const newPassword = document.getElementById('newPassword').value.trim();
      if (!otp || !newPassword) return alert('Enter OTP and new password');

      const res = await fetch('/api/reset-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email: emailUsed, otp, newPassword })
      });

      const data = await res.json();
      if (res.ok) {
        alert('Password reset successful! Please log in again.');
        window.location.reload();
      } else {
        alert(data.error || 'Invalid OTP or email');
      }
    }
  </script>
</body>
</html>
